#include <stdio.h>

// DECLARACION DE VARIABLES

// Solo Declaración de una variable entera llamada "edad"
int edad;

// También se puede hacer Declaración y asignación en una sola línea
int a, b, c;
float f, g, h;

int main()
{
  // Asignación de un valor a la variable "edad" 
  edad = 25;

  int suma = edad + 5; // Realiza una operación de suma
  printf("El valor de la suma de la edad es: %d\n\n", suma);


  // inicializo las variables
  a = 1;
  b = 34;

  c = a + b; // realiza una operación de suma 
  printf("Valor de la suma es: %d", c);
  
  return 0;
}
