#include <stdio.h>

int main() {
    // Declaración de variables de tipo char
    char letra1 = 'A'; // Una letra en comillas simples
    char letra2 = 66;  // Valor ASCII de 'B'
    char letra3 = '\n'; // Carácter de nueva línea

    // Impresión de las variables char
    printf("Letra 1: %c\n", letra1);
    printf("Letra 2: %c\n", letra2);
    printf("Letra 3: %c", letra3);

    return 0;
}
